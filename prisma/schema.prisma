generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  patient
  provider
}

model User {
  id String @id @default(uuid())
  email String @unique
  name String
  role Role
  passwordHash String
  phone String?
  createdAt DateTime @default(now())
  provider Provider?
  patient Patient?

}

model Patient{
  id String @id @default(uuid())
  userId String @unique
  age Int
  gender String
  address String?

  user User @relation(fields: [userId], references: [id])
  appointments Appointment[] @relation("PatientAppointments")
}

model Provider{
  id String @id @default(uuid())
  userId String @unique
  speciality String
  description String?
  experience String?
  appointmentFee Decimal

  user User @relation(fields: [userId], references: [id])
  slots ProviderSlot[]
  appointments Appointment[] @relation("ProviderAppointments")
}

model ProviderSlot {
  id String @id @default(uuid())
  providerId String
  startTime DateTime
  endTime DateTime
  isBooked Boolean @default(false)

  provider Provider @relation(fields: [providerId], references: [id])
  appointment Appointment?
  @@unique([providerId, startTime])
  @@index([providerId, startTime])
}

model Appointment {
  id String @id @default(uuid())
  providerId String
  patientId String
  slotId String @unique
  status String @default("booked")
  reason String?
  createdAt DateTime @default(now())

  provider Provider @relation("ProviderAppointments", fields: [providerId], references: [id])
  patient Patient @relation("PatientAppointments", fields: [patientId], references: [id])
  slot ProviderSlot @relation(fields: [slotId], references: [id])

  @@index([providerId, patientId])
}
